{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nexus",
  "version": "0.0.3",
  "identifier": "com.baptiste.nexus",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Nexus",
        "width": 1200,
        "height": 800,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/TISEPSE/Nexus/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE4OEYyQTJENjUyRUEwRDMKUldUVG9DNWxMU3FQR0FYZ1o2UkFhNGQ2Zkl1dkVCb3lzMDJKendvMFp6T3MyNjNjdmV4VWU3Z24K"
    }
  }
}
